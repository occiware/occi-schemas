<?xml version="1.0" encoding="ASCII"?>
<occi:Extension xmi:version="2.0" xmlns:xmi="http://www.omg.org/XMI" xmlns:occi="http://schemas.ogf.org/occi/core/ecore" name="light" scheme="http://occiware.org/light#">
  <import href="http://schemas.ogf.org/occi/core#/"/>
  <kinds term="light" scheme="http://occiware.org/light#">
    <attributes name="occi.light.state" mutable="true" default="off" description="Light IOT Resource">
      <type href="http://schemas.ogf.org/occi/core#//@types.0"/>
    </attributes>
    <parent href="http://schemas.ogf.org/occi/core#//@kinds[term='resource']"/>
    <actions term="switchOn" scheme="http://occiware.org/light/light/action#" title="Turn on the light"/>
    <actions term="switchOff" scheme="http://occiware.org/light/light/action#" title="Turn off the light"/>
  </kinds>
</occi:Extension>
